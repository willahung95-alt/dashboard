<!DOCTYPE html>
<html lang="zh-TW">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>系統連線監控中心</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        .dot { height: 12px; width: 12px; border-radius: 50%; display: inline-block; margin-right: 8px; }
        .bg-online { background-color: #10b981; box-shadow: 0 0 8px #10b981; }
        .bg-offline { background-color: #ef4444; box-shadow: 0 0 8px #ef4444; }
    </style>
</head>
<body class="bg-gray-900 text-gray-100 p-8">
    <div class="max-w-5xl mx-auto">
        <header class="flex justify-between items-center mb-10 border-b border-gray-700 pb-5">
            <h1 class="text-3xl font-bold tracking-tight">監控中心 <span class="text-blue-400 text-sm font-normal ml-2">Real-time Status</span></h1>
            <div id="lastUpdate" class="text-gray-400 text-sm">更新中...</div>
        </header>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6" id="statusGrid">
            </div>
    </div>

    <script>
        // 請替換成您剛才部署的 GAS 網頁應用程式 URL
        const GAS_URL = "https://script.google.com/macros/s/AKfycbxZsTFYOsMhRuStkKOM_IOui4suN2jXsQYWIObka0mnRVynuscYHj1Z-0bv9_vJTntm/exec";

        async function fetchStatus() {
            try {
                const response = await fetch(GAS_URL);
                const data = await response.json();
                renderCards(data);
                document.getElementById('lastUpdate').innerText = "最後同步: " + new Date().toLocaleTimeString();
            } catch (e) {
                console.error("無法取得資料", e);
            }
        }

        function renderCards(data) {
            const container = document.getElementById('statusGrid');
            container.innerHTML = '';
            data.forEach(item => {
                const isOnline = item.Status === "正常";
                const card = `
                    <div class="bg-gray-800 p-6 rounded-xl border border-gray-700 hover:border-blue-500 transition-all">
                        <div class="flex justify-between items-start mb-4">
                            <h3 class="text-xl font-semibold">${item['Client Name']}</h3>
                            <span class="dot ${isOnline ? 'bg-online' : 'bg-offline'}"></span>
                        </div>
                        <p class="text-gray-400 text-sm truncate mb-4">${item.URL}</p>
                        <div class="flex justify-between items-center text-xs">
                            <span class="${isOnline ? 'text-emerald-400' : 'text-red-400'} font-bold">
                                ${item.Status || '檢查中'}
                            </span>
                            <span class="text-gray-500">${item['Last Check'] || '-'}</span>
                        </div>
                    </div>
                `;
                container.innerHTML += card;
            });
        }

        // 每 30 秒更新一次前端畫面
        fetchStatus();
        setInterval(fetchStatus, 30000);
    </script>
</body>
</html>
